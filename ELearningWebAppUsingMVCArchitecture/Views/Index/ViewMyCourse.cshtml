<div class="container">
    <div class="video-player">
        <div class="video-frame">
            <iframe id="mainVideo" width="100%" height="500px" src="@Model.FirstOrDefault()?.VideoLink" frameborder="0" allowfullscreen></iframe>
        </div>
        <div class="video-controls">
            <!-- Additional controls (like, dislike, etc.) can remain the same -->
            <div class="controls">
                <button>Like</button>
                <button>Dislike</button>
                <button>Share</button>
                <button>Download</button>
            </div>
        </div>
    </div>
    <div class="video-list">
        @foreach (var video in Model)
        {
            <div class="video-item" onclick="changeVideo('https://www.youtube.com/embed/@video.VideoId')">
                <img src="" alt="Thumbnail">
                <p>@video.VideoTitle</p>
            </div>
        }
        <!-- Add more video items as needed -->
    </div>
</div>

