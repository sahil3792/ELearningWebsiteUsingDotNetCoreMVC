@model Video

<form id="VideoForm">
    <div class="form-group">
        <label>Select Category:</label>
        <select class="form-control" id="DisplayCategory" name="CategoryId" onchange="GetSubCategoryData()" >
        </select>
    </div>
    <div class="form-group">
        <label>Select Sub-Category:</label>
        <select class="form-control" id="DisplaySubCategory" name="SubCategoryId" onchange="GetCourseData()">
        </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Select Course </label>
        <select class="form-control" name="CourseId" id="DisplayCourseDropdown">

        </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Enter Video Title</label>
        <input type="text" name="VideoTitle" class="form-control">
    </div>
    
    
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Enter Video Link </label>
        <input type="text" name="VideoLink" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary" id="SaveVideobtn">Submit</button>
</form>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/ajax/js/javascript.js"></script>